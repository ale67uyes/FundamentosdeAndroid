<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/marcianito_miprimer_proyecto_android"
    tools:context="uy.ahhb.holamundo.MainActivity">

    <TextView
        android:id="@+id/Bienvenido"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="127dp"
        android:layout_marginEnd="140dp"
        android:layout_marginStart="240dp"
        android:autoSizeMaxTextSize="@android:dimen/thumbnail_width"
        android:autoSizeMinTextSize="@android:dimen/dialog_min_width_major"
        android:autoSizeTextType="uniform"
        android:fontFamily="monospace"
        android:text="@string/texto1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/background_light"
        android:textSize="@android:dimen/app_icon_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="117dp" />

    <Button
        android:id="@+id/entrar"
        android:layout_width="257dp"
        android:layout_height="128dp"
        android:autoSizeMaxTextSize="@android:dimen/app_icon_size"
        android:autoSizeTextType="uniform"
        android:autoText="false"
        android:background="@android:color/transparent"
        android:text="@string/texto2"
        android:textColor="@android:color/background_light"
        android:textIsSelectable="false"
        tools:layout_editor_absoluteX="532dp"
        tools:layout_editor_absoluteY="267dp" />

</android.support.constraint.ConstraintLayout>
